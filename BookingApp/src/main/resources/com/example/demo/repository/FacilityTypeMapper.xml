<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.FacilityTypeMapper">

  <!-- サイトタイプ全件取得 -->
  <select id="findAllFacilityType" resultType="FacilityType">select
      id
      , name
      , capacity
    from
      facility_types
    order by
      id</select>

  <!-- サイトタイプ取得(ID取得) -->
  <select id="findByFacilityTypeId" resultType="FacilityType">select
      id
      , name
      , capacity
    from
      facility_types
    where
      id = #{facilityTypeId}</select>

</mapper>
